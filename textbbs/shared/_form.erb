<% require 'erb' %>
<% require_relative 'page' %>
<html lang="ja">
    <head>
        <meta charset="UTF-8" />
        <link rel="stylesheet" type="text/css" href="index.css" />
        <script src="/js/reply.js"></script>
		<title>テキスト掲示板</title>
    </head>
    <body>
        <h1>テキスト掲示板</h1>
        <hr>
    <form action="write" method="post">
        <table>
            <tr>
                <th class="write_form">お名前：</th>
                <td><input type="text" name="name" size="30" value="" /></td>
            </tr>
            <tr>
                <th class="write_form">メールアドレス：</th>    
                <td><input type="email" name="email" size="30" value="" /></td>
            </tr>
            <tr>
                <th class="write_form">タイトル：</th>    
                <td><input type="text" id="title" name="title" size="30" value="" /></td>
            </tr>
            <tr>
            <th class="write_form">本文：</th>
                <td><textarea id="textarea" name="textarea" rows="5" cols="50" value="" ></textarea></td>
            </tr>
            <tr>
                <td><input type="submit" value="投稿"/></td>
            </tr>
       	</table>
    </form>
